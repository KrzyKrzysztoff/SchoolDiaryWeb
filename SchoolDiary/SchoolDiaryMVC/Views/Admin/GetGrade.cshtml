@model List<GradeViewModel>
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Wyswietl oceny</title>
    </head>
    <body>
        @foreach (var item in Model)
        {
        <form method="post">
            @if (item.IsFinalGrade == true)
            {
            <h3 class="text-danger">Ocena Końcowa</h3>@item.Rating}
